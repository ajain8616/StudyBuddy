<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <!-- Background Gradient Layer with a single color -->
    <item
        android:top="-120dp"
        android:bottom="220dp"
        android:left="-50dp"
        android:right="-50dp">
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:useLevel="false"
                android:startColor="#6200EE"
            android:centerColor="#BB86FC"
            android:endColor="#6200EE"
            android:centerX="0.5"
            android:centerY="0.5" />
        </shape>
    </item>

    <!-- Inner Glow Layer -->
    <item
        android:top="-130dp"
        android:bottom="210dp"
        android:left="-40dp"
        android:right="-40dp">
        <shape android:shape="oval">
            <solid android:color="#66FFFFFF" />
        </shape>
    </item>

    <!-- Shadow Effect -->
    <item
        android:top="-115dp"
        android:bottom="225dp"
        android:left="-55dp"
        android:right="-55dp">
        <shape android:shape="oval">
            <solid android:color="#22000000" />
        </shape>
    </item>

</layer-list>
